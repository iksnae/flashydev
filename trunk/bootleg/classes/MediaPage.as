import mx.controls.Button;import mx.video.FLVPlayback;class MediaPage extends MovieClip {	private var MediaArray:Array;	private var RootShell:MovieClip;	private var MediaEntries:Array;	private var newsStatMC:MovieClip;	private var imageHolder:MovieClip;	private var Header_txt:TextField;	private var Body_txt:TextField;	private var Date_txt:TextField;	private var my_video:FLVPlayback;	private var ListHolder:MovieClip;	function MediaPage() {		trace(my_video);		init();	}	private function init() {		trace('media section initiated.');		MediaEntries = new Array();		RootShell = _root.shell;		MediaArray = RootShell.MediaArray;		for (var i = 0; i<MediaArray.length; i++) {			var tmp = ListHolder.attachMovie('media_entry', 'MediaEntry'+i, ListHolder.getNextHighestDepth());			tmp.setID(i);			tmp.Header_txt.text = MediaArray[i][0];			tmp.Date_txt.htmlText = MediaArray[i][2];			tmp._y = i*tmp._height;			MediaEntries.push(tmp);		}		updateStat();		populateMain(0);	}	private function updateStat() {		newsStatMC.total_news_entries.text = MediaArray.length;		if (MediaEntries<7) {			newsStatMC.current_news_entry.text = MediaEntries[0].idNum+' - '+MediaEntries[6].idNum;		} else {			newsStatMC.current_news_entry.text = MediaEntries[0].idNum+' - '+MediaArray.length;		}	}	private function populateMain(num:Number) {		Header_txt.text = MediaArray[num][0];		Body_txt.htmlText = MediaArray[num][1];		Date_txt.text = MediaArray[num][2];		if (MediaArray[num][4] == "video") {			my_video.play(MediaArray[num][3]);		}		if (MediaArray[num][4] == "audio") {			trace('play mp3: '+MediaArray[num][3]);		}		trace("Play Media: "+MediaArray[num][3]);	}	public function loadMedia(id:Number) {		trace('loadMedia');		populateMain(id);	}}