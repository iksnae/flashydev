package com.bootlegcomedy.views{	import flash.display.Sprite;	import flash.text.TextField;	import lt.uza.utils.Global;	import gs.TweenLite;	import flash.events.MouseEvent;	public class Navigation extends Sprite	{		private var global:Global = Global.getInstance();		private var Header:TextField;		private var SubHeader:TextField;		private var HeaderMessage:TextField;		private var ButtonHolder:Sprite;		private var navEntries:Array=new Array();		private var navButtons:Array=new Array();						public function Navigation()		{			this.mouseEnabled=false;			global.navDataReady =navDataReady;			Header = this['header_txt'];			SubHeader = this['subheader_txt'];			HeaderMessage = this['header_message_txt'];			ButtonHolder = this['button_holder'];			ButtonHolder.mouseEnabled=false;			init();		}		private function init():void{			// SET DEFAULTS...			Header.text="BOOTLEG COMEDY";			SubHeader.text='the home page';			HeaderMessage.text = "welcome too bootleg comedy";		}		private function navDataReady():void{			navEntries = global.getNavData();			for(var i=0;i<navEntries.length;i++){				var label = navEntries[i][0];				var btn:NavigationButton = new NavigationButton();				btn.SetText(label);				btn.x = 70*i;				ButtonHolder.addChild(btn);				btn.addEventListener(MouseEvent.CLICK,clickHandler);				btn.unlock();				navButtons.push(btn);										}					}				private function clickHandler(e:MouseEvent){			trace(e.currentTarget.id);			var id=e.currentTarget.id			for(var i=0;i<navButtons.length;i++){				if(id==navEntries[i][0]){					navButtons[i].lock();					setHeaderMessage(navEntries[i][1]);					setSubHeader(navButtons[i].id);					global.changeViews(i);				}else{					navButtons[i].unlock();				}			}					}						/*		PUBLIC METHODS				*/		public function setHeader(str:String):void{			this.Header.text=str;					}		public function setSubHeader(str:String):void{			this.SubHeader.text=str;		}		public function setHeaderMessage(str:String):void{			this.HeaderMessage.text=str;		}					}}