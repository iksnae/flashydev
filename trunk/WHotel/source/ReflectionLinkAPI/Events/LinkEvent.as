package ReflectionLinkAPI.Events {	import flash.events.Event;/** * @author andrehines */public class LinkEvent extends Event{		public var sectionType:String;	public var sectionIndex:uint;	public var sectionTitle:String;		public static var LINK_READY:String = "linkReady";	public static var ROLLED_OVER:String = "rolledOver";	public static var ROLLED_OUT:String = "rolledOut";	public static var SECTION_CLICKED:String = "sectionClicked";	public static var SUB_CLICKED:String = "subClicked";		function LinkEvent(type:String, bubbles:Boolean = false, cancelable:Boolean = false, theSectionType:String = null, theSectionIndex:uint = 0, theSectionTitle:String = null){		trace("LinkEvent class instantiated");				super(type, bubbles, cancelable);				//set the variables		this.sectionType = theSectionType;		this.sectionIndex = theSectionIndex;		this.sectionTitle = theSectionTitle;	}		//Every custom Event class must override clone methods of the superclass	public override function clone():Event{		return	new LinkEvent(type, bubbles, cancelable, this.sectionType, this.sectionIndex, this.sectionTitle);		}	//Every custom Event class must override toString methods of the superclass	public override function toString():String{		return	formatToString("LinkEvent", "type", "bubbles", "cancelable", "eventPhase", "sectionType", "sectionIndex", "sectionTitle");	}}}