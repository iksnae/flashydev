import mx.controls.Button;import mx.video.FLVPlayback;class ShowsPage extends MovieClip {	private var ShowsArray:Array;	private var RootShell:MovieClip;	private var ShowsEntries:Array;	private var StatMC:MovieClip;	private var imageHolder:MovieClip;	private var MainHeader_txt:TextField;	private var MainBody_txt:TextField;	private var MainDate_txt:TextField;	private var my_video:FLVPlayback;	private var ListHolder:MovieClip;	function ShowsPage() {		init();	}	private function init() {		trace('shows section initiated.');		ShowsEntries = new Array();		RootShell = _root.shell;		ShowsArray = RootShell.ShowsArray;		trace('ShowsArray loaded:\r'+ShowsArray)		for (var i = 0; i<ShowsArray.length; i++) {			var tmp = ListHolder.attachMovie('shows_entries','ShowEntry'+i,i);			tmp.setID(i);			trace('/--------------------------/tmp:'+tmp+'\r+++ShowArray'+ShowsArray[i][2])			tmp.Header_txt.text = ShowsArray[i][0];			tmp.Date_txt.htmlText = ShowsArray[i][2];			tmp._y=i*tmp._height;						ShowsEntries.push(tmp);		}		updateStat();		populateMain(0);	}	private function updateStat() {		StatMC.total_news_entries.text = ShowsArray.length;		if (ShowsEntries<7) {			StatMC.current_news_entry.text = (ShowsEntries[0].btnID+1)+' - '+(ShowsEntries[ShowsArray.length].btnID+1);		} else {			StatMC.current_news_entry.text = (ShowsEntries[0].btnID+1)+' - '+ShowsArray.length;		}	}	private function populateMain(num:Number) {		trace('Shows: populateMain('+num+')')		MainHeader_txt.text = ShowsArray[num][0];		MainBody_txt.htmlText = ShowsArray[num][1];		MainDate_txt.text = ShowsArray[num][2];		imageHolder.holder.loadMovie(ShowsArray[num][3],0);		trace("Display Show: "+ShowsArray[num][0]);	}	public function loadShowInfo(id:Number) {		trace('loadShowInfo('+id+')');		populateMain(id);	}}