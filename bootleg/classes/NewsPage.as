class NewsPage extends MovieClip {	private var NewsArray:Array;	private var RootShell:MovieClip;	private var LatestNews0:MovieClip;	private var LatestNews1:MovieClip;	private var LatestNews2:MovieClip;	private var LatestNews3:MovieClip;	private var LatestNews4:MovieClip;	private var LatestNews5:MovieClip;	private var LatestNews6:MovieClip;	private var NewsSeven:Array;	private var newsStatMC:MovieClip;	private var imageHolder:MovieClip;	private var MainHeader_txt:TextField;	private var MainBody_txt:TextField;	function NewsPage() {		init();	}	private function init() {		NewsSeven = new Array(LatestNews0, LatestNews1, LatestNews2, LatestNews3, LatestNews4, LatestNews5, LatestNews6);		RootShell = _root.shell;		NewsArray = RootShell.NewsArray;		for (var i = 0; i<7; i++) {			NewsSeven[i].Header_txt.text = NewsArray[i].title;			NewsSeven[i].Body_txt.htmlText = NewsArray[i].description;			NewsSeven[i].Date_txt.htmlText = NewsArray[i].pubDate;			NewsSeven[i].idNum=i+1;			if(!NewsArray[i].title){				NewsSeven[i]._alpha=0;				NewsSeven[i].enabled=false;			}		}		updateStat();		populateMain(0)		trace(MainBody_txt)	}	private function updateStat(){		newsStatMC.total_news_entries.text = NewsArray.length;		if(NewsSeven<7){		newsStatMC.current_news_entry.text = NewsSeven[0].idNum+' - '+NewsSeven[6].idNum;		}else{			newsStatMC.current_news_entry.text = NewsSeven[0].idNum+' - '+NewsArray.length;		}	}	private function populateMain(num:Number){		MainHeader_txt.text=NewsArray[num].title;		MainBody_txt.htmlText=NewsArray[num].description;		imageHolder.holder.loadMovie(NewsArray[num].image,0);	}	public function loadNews(id:String){		trace('loasdNews')		switch(id){			case 'LatestNews0':				populateMain(0)			break;			case 'LatestNews1':				populateMain(1)			break;			case 'LatestNews2':				populateMain(2)			break;			case 'LatestNews3':				populateMain(3)			break;			case 'LatestNews4':				populateMain(4)			break;			case 'LatestNews5':				populateMain(5)			break;			case 'LatestNews6':				populateMain(6)			break;		}	}}